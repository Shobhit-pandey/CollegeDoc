<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_reset_email_password"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="collegedoc.com.collegedoc.ResetEmailPassword">

<android.support.v7.widget.Toolbar
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:background="@color/colorPrimary"
    android:titleTextColor="#ffffff"
    android:id="@+id/toolbar"
    android:theme="@style/Base.Theme.AppCompat"
    app:title="College Doc"
    app:titleMargin="0dp"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.Toolbar>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Go Back"
    android:id="@+id/back"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="53dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    style="@android:style/Widget.Holo.Light.Button.Toggle"
    android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
    android:fontFamily="monospace"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reset"
    android:id="@+id/reset"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="27dp"
    app:layout_constraintTop_toBottomOf="@+id/confirm"
    style="@style/FirebaseUI.Button"
    android:background="@color/authui_colorAccent"
    android:backgroundTint="@android:color/holo_green_light"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" />

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/confirm"
    android:text="Confirm to Reset Password"
    tools:layout_constraintRight_creator="1"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="64dp"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    android:fontFamily="cursive"
    android:textSize="36sp"
    android:textColor="@android:color/holo_orange_dark"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
