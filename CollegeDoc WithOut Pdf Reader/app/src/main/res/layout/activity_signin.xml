<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_signin"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="collegedoc.com.collegedoc.SigninActivity">

<Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/signin"
    android:text="Connect"
    android:background="@drawable/tw__login_btn_pressed"
    android:textColor="@android:color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="90dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" />

<android.support.v7.widget.Toolbar
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    android:titleTextColor="#ffffff"
    android:id="@+id/toolbar"
    android:theme="@style/Base.Theme.AppCompat"
    app:title="College Doc"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.Toolbar>

<EditText
    android:layout_width="0dp"
    android:padding="15dp"
    android:layout_height="52dp"
    android:inputType="textEmailAddress"
    android:ems="10"
    android:id="@+id/email"
    android:hint="Email . . ."
    android:background="@drawable/input_outline"
    app:layout_constraintBottom_toTopOf="@+id/signin"
    android:layout_marginBottom="40dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" />

<ImageView
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/sign_in_building"
    android:contentDescription="College Doc"
    android:id="@+id/imageView2"
    android:layout_width="0dp"
    app:layout_constraintBottom_toTopOf="@+id/email"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginBottom="24dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
